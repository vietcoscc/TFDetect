<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.tensorflow.demo.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/horizontal_page_margin"
        android:background="@drawable/component_background"
        android:gravity="center"
        android:text="@string/main_activity"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_page_margin"
        android:background="@drawable/component_background"
        android:text="@string/btn_tensorflow"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_page_margin"
        android:background="@drawable/component_background"
        android:text="@string/btn_open_alpr"
        android:textColor="@android:color/white" />
</LinearLayout>
